<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.testimony.TestimonialsActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/testimonials_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="26dp">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_main"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/labiofamColor"
            app:title="Testimonios"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/leftarrow"
            app:layout_scrollFlags="scroll|enterAlways">
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_marginTop = "30dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="30dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/telex"
        android:gravity="center"
        android:text="ImÃ¡genes"
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/testimonials_app_bar">
    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_Testimonials"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">
    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/images_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/telex"
        android:gravity="center"
        android:text="Videos"
        android:layout_marginBottom="30dp"
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintTop_toBottomOf="@id/rv_Testimonials"
        tools:layout_editor_absoluteX="0dp"></TextView>

    <VideoView
        android:id="@+id/testimony_video"
        android:layout_width="280dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/images_tv"
        app:layout_constraintVertical_bias="0.0"></VideoView>

    <Button
        android:id="@+id/next_btn"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="32dp"
        android:background="@color/white"
        android:drawableRight="@drawable/vnext"
        android:drawablePadding="7dp"
        android:onClick="nextVideo"
        android:text="Siguiente"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/prev_btn"
        app:layout_constraintTop_toBottomOf="@+id/testimony_video"
        app:layout_constraintVertical_bias="0.0">

    </Button>

    <Button
        android:id="@+id/prev_btn"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="75dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/vprev"
        android:drawablePadding="7dp"
        android:onClick="prevVideo"
        android:text="Anterior"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/testimony_video"
        app:layout_constraintVertical_bias="0.0"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>