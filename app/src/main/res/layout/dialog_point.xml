<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:id="@+id/dialog_point"
    android:background="@color/white"
    android:layout_height="150dp"
    android:layout_marginVertical="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    android:layout_gravity="center"
    android:layout_marginEnd="50dp"
    android:layout_marginBottom="30dp"
    android:orientation="vertical"
    android:clickable="true"
    android:onClick="showBioproducts"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.map.MapActivity">

    <TextView
        android:id="@+id/sellpoint_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del punto"
        android:layout_marginBottom="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"></TextView>

    <TextView
        android:id="@+id/sellpoint_municipality_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="Municipio del punto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sellpoint_name_tv" />

    <TextView
        android:id="@+id/sellpoint_province_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="Provincia del punto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sellpoint_municipality_tv">

    </TextView>

    <TextView
        android:id="@+id/sellpoint_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="Direccion del medio"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sellpoint_province_tv"
        app:layout_constraintVertical_bias="0.0"></TextView>

    <Spinner
        android:id="@+id/bioproducts_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sellpoint_address">

    </Spinner>

</androidx.constraintlayout.widget.ConstraintLayout>