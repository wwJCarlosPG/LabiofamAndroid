<?xml version="1.0" encoding="utf-8"?>
 <androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="50dp"
    android:id="@+id/dialog_point"
    android:background="@color/white"
    android:layout_height="50dp"
    android:layout_marginVertical="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:layout_gravity="center"
    android:layout_marginEnd="50dp"
    android:layout_marginBottom="30dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/sell_point_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Api info name"
        android:layout_marginVertical="6dp"/>
    <TextView
        android:id="@+id/sell_point_municipality_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:text="Api info municipality"/>
    <TextView

        android:id="@+id/sell_point_province_tv"
        android:layout_width="wrap_content"
        android:layout_marginVertical="6dp"
        android:layout_height="wrap_content"
        android:text="Api info province"/>

    <TextView
        android:id="@+id/sell_point_available_products_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Api info available products(esto no va asi)"
        android:layout_marginVertical="6dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>