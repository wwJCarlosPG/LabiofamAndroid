<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="16dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="16dp"
            android:src="@drawable/contact_img">

        </ImageView>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/contact_name"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="@string/name_text"
                android:textSize="14sp"
                android:layout_marginVertical="6dp">

            </TextView>

            <TextView
                android:id="@+id/contact_age"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="@string/age_text"
                android:textSize="14sp"
                android:layout_marginVertical="6dp">

            </TextView>

            <TextView
                android:id="@+id/contact_position"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="@string/position"
                android:textSize="14sp"
                android:layout_marginVertical="6dp">

            </TextView>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.cardview.widget.CardView
            android:id="@+id/image_contact_phone_cv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginVertical="35dp"
            app:cardBackgroundColor="@color/contactPhone"
            app:cardCornerRadius="1000000dp"

            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:tint="@color/white"
                android:layout_height="match_parent"
                android:src="@drawable/phone_img">

            </ImageView>

        </androidx.cardview.widget.CardView>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>