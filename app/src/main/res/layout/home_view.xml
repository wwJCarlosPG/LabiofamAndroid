<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/best_sales_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/telex"
        android:text="PRODUCTOS + VENDIDOS"
        android:textColor="@color/labiofamColor"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/second_title_iv" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/labiofamColor"
        app:labelVisibilityMode="auto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/activiy_bottom_menu_contacts"></com.google.android.material.bottomnavigation.BottomNavigationView>

    <ImageView
        android:id="@+id/title_iv"
        android:layout_width="419dp"
        android:layout_height="309dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/second_title_iv"
        android:layout_width="341dp"
        android:layout_height="168dp"
        android:src="@drawable/second2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_iv"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/random_iv1"
        android:layout_width="88dp"
        android:layout_height="95dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintEnd_toStartOf="@+id/random_iv2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/best_sales_tv"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/random_iv2"
        android:layout_width="88dp"
        android:layout_height="95dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintEnd_toStartOf="@id/random_iv3"
        app:layout_constraintStart_toEndOf="@id/random_iv1"

        app:layout_constraintTop_toBottomOf="@+id/best_sales_tv"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/random_iv3"
        android:layout_width="88dp"
        android:layout_height="95dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/random_iv2"
        app:layout_constraintTop_toBottomOf="@+id/best_sales_tv"
        tools:srcCompat="@tools:sample/avatars" />


</androidx.constraintlayout.widget.ConstraintLayout>